<div id="comments">
  <div class="page-header">
    <h3>Comments</h3>
  </div>

  <%= form_for [*commentable_path, Comment.new], remote: true do |f| %>
    <div class="form-group">
      <%= f.text_area :body, rows: 3, class: "form-control", placeholder: "Write a comment...", data: {behavior: "write-comment"} %>
    </div>

    <div class="form-group">
      <div class="pull-right">
        <span class="comment-length" data-behavior="comment-length"><%= fa_icon "plus-square-o", text: "280" %></span>
        <%= f.button "Post it", class: "btn btn-success btn-sm", data: {disable_with: "#{fa_icon('spinner spin')} Posting..."} %>
      </div>
      <div class="clearfix"></div>
    </div>
  <% end %>

  <div data-behavior="comments">
    <% if commentable.comments.count == 0 %>
      <h4 data-behavior="no-comments-posted">No comments have been posted for this <%= commentable.class %></h4>
    <% else %>
      <%= render partial: "comments/comment", collection: commentable.comments.includes(:user).order(created_at: :desc) %>
    <% end %>
  </div>
</div>
