<div id="comments">
  <div class="page-header">
    <h3>Comments</h3>
  </div>

  <%= form_for [*commentable_path, Comment.new], remote: true do |f| %>
    <div class="form-group">
      <%= f.text_area :body, rows: 3, class: "form-control", placeholder: "Write a comment...", data: {behavior: "write-comment"} %>
    </div>

    <div class="form-group">
      <div class="pull-right">
        <%= f.button fa_icon('comment-o fw', text: 'Post'), class: "btn btn-success btn-sm", data: {disable_with: "#{fa_icon('spinner spin')} Posting..."} %>
      </div>
      <div class="clearfix"></div>
    </div>
  <% end %>

  <div data-behavior="comments">
    <%= render partial: "comments/comment", collection: commentable.comments.includes(:user).order(created_at: :desc) %>
  </div>
</div>
