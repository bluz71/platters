<div class="page-header">
  <h1><%= @album.title %></h1>
</div>


<div class="row">
  <div class="col-md-4">
    <%= image_tag "cover250.jpg" %>
  </div>
  <div class="col-md-6">
    <h2>Tracks <small>(<%= @album.tracks.count %> Tracks)</small></h2>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>No.</th>
          <th>Title</th>
          <th>Duration</th>
        </tr>
      </thead>
      <tbody>
        <% @album.tracks.order(:number).each do |track| %>
          <tr>
            <td><%= track.number %></td>
            <td><%= track.title %></td>
            <td><%= track.duration %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

