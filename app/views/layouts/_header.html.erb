<header id="platters-header">
  <nav class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_pack_tag "platters-white.svg" %> platters
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapse">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="collapse">
      <ul class="nav navbar-nav">
        <li class="nav-item"><%= link_to "Artists", artists_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "Albums", albums_path, class: "nav-link" %></li>
      </ul>
      <% if signed_out? %>
        <ul class="nav navbar-nav ml-auto">
          <li class="nav-item"><%= link_to "Log in", log_in_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Sign up", sign_up_path, class: "nav-link" %></li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav ml-auto">
          <li class="dropdown nav-item">
            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
              <%= fa_icon "user fw", text: current_user.name %> <span class="caret"></span>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
              <%= link_to fa_icon("comment-o fw", text: "&nbsp;Comments".html_safe), user_comments_path(current_user), class: "dropdown-item" %>
              <%= link_to fa_icon("gear fw", text: "&nbsp;Account".html_safe), edit_user_path(current_user), class: "dropdown-item"%>
              <%= link_to fa_icon("sign-out fw", text: "&nbsp;Log out".html_safe), log_out_path, method: :delete, class: "dropdown-item"%>
            </div>
          </li>
        </ul>
      <% end %>
    </div>
  </nav>
</header>
