<div class="page-header">
  <h1>Artist</h1>
</div>

<div class="row">
  <div class="col-md-9">
    <div class="well">
      <%= form_for @artist, html: { class: "form-horizontal" } do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "col-md-2 control-label" %>
          <div class="col-md-9">
            <%= f.text_field :name, class: "form-control", placeholder: "The Foobars" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :wikipedia, class: "col-md-2 control-label" %>
          <div class="col-md-9">
            <%= f.text_field :wikipedia, class: "form-control", placeholder: "The_Foobars" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :website, class: "col-md-2 control-label" %>
          <div class="col-md-9">
            <%= f.text_field :website, class: "form-control", placeholder: "http://www.thefoobars.com" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :description, class: "col-md-2 control-label" %>
          <div class="col-md-9">
            <%= f.text_area :description, rows: 7, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-9">
            <%= link_to "Cancel", artists_url, class: "btn btn-default btn-sm" %>
            <%= f.submit "Submit", class: "btn btn-success btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
