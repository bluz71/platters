<% title("Platters - Artists") %>
<div class="row">
  <div class="col-lg-10">
    <div id="artists">
      <div class="page-header">
        <div class="pull-left">
          <%= header_text_with_counter(:h1, "Artist", @artists.total_count) %>
        </div>
        <% if signed_in_as_admin? %>
          <div class="pull-right">
            <%= link_to new_artist_path, class: "action" do %>
              <%= fa_icon "plus" %> Artist
            <% end %>
          </div>
        <% end %>
        <div class="clearfix"></div>
      </div>

      <div class="list-choice">
        <ul class="pagination pagination-sm justify-content-center">
          <li class="page-item"><%= link_to "All", artists_path, class: "page-link" %></li>
          <% unless params.key?(:search) %>
            <% ("A".."Z").each do |letter| %>
              <li data-behavior="artist-letter-picker" class="page-item <%= letter_activity(params, letter) %>"><%= link_to letter, artists_path(letter: letter), class: "page-link" %></li>
            <% end %>
          <% end %>
          <li class="page-item"><a class="page-link search-link" title="Search" data-toggle="tooltip" data-behavior="artist-search-link"><%= fa_icon "search" %></a></li>
        </ul>
      </div>

      <%= render partial: "shared/search", locals: {type: "artist", path: artists_path} %>

      <% if @artists.empty? %>
        <h4 class="text-center">No matching artists</h4>
      <% else %>
        <%= render partial: "artist", collection: @artists %>
        <%= paginate @artists %>
      <% end %>
    </div>
  </div>

  <%= render partial: "sidebar" %>
</div>
