<div class="form-group <%= error?(user, :email) %>">
  <%= form.label :email, class: "col-md-2 control-label" %>
  <div class="col-md-9">
    <%= form.email_field :email, class: "form-control" %>
  </div>
</div>

<div class="form-group <%= error?(user, :password) %>">
  <%= form.label :password, class: "col-md-2 control-label" %>
  <div class="col-md-9">
    <%= form.password_field :password, class: "form-control" %>
  </div>
</div>

<div class="form-group <%= error?(user, :name) %>" data-behavior="user-name">
  <%= form.label "Account name", class: "col-md-2 control-label" %>
  <div class="col-md-9">
    <%= form.text_field :name, class: "form-control" %>
    <span class="help-block">
      An account name needs to be between 4 to 20 characters made up only of letters, digits and hyphens.
    </span>
  </div>
</div>
