<div class="filter col-lg-12" data-behavior="album-filter">
  <%= form_with url: albums_path, method: :get, skip_enforcing_utf8: true, button: nil, data: {behavior: "album-filter-form"}, local: true do %>
    <div class="form-row">
      <div class="form-group col-lg-2 offset-lg-2">
        <%= label_tag :genre, nil, class: "col-form-label" %>
        <%= select_tag :genre, options_from_collection_for_select(Genre.order(:name), :name, :name), {include_blank: "Choose", class: "form-control form-control-sm"} %>
      </div>
      <div class="form-group col-lg-2">
        <%= label_tag "Year(s)", nil, class: "col-form-label" %>
        <%= text_field_tag :year, nil, class: "form-control form-control-sm", placeholder: "2000, 2004..2008", pattern: "[0-9., ]+" %>
      </div>
      <div class="form-group col-lg-1">
        <%= label_tag :sort , nil, class: "col-form-label"%>
        <div class="radio form-check-first">
          <label><%= radio_button_tag :sort, :title, true %> Title</label>
        </div>
        <div class="radio form-check-last">
          <label><%= radio_button_tag :sort, :year %> Year</label>
        </div>
      </div>
      <div class="form-group col-lg-1">
        <%= label_tag :order, nil, class: "col-form-label" %>
        <div class="radio form-check-first">
          <label><%= radio_button_tag :order, :forward, true %> Forward</label>
        </div>
        <div class="radio form-check-last">
          <label><%= radio_button_tag :order, :reverse %> Reverse</label>
        </div>
      </div>
      <div class="form-group col-lg-2">
        <%= button_tag "Select", class: "submit btn btn-success btn-sm", name: nil, data: {disable_with: "#{fa_icon('spinner spin')} Selecting..."} %>
      </div>
    </div>
  <% end %>
</div>
