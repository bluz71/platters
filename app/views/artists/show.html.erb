<div id="artist">
  <div class="page-header">
    <h1><%= @artist.name %></h1>
    <%= link_to "Remove", new_artist_url, class: "btn btn-success btn-sm remove-artist", method: :delete%>
  </div>
  <div class="description">
    <p><%= @artist.description %></p>
    <% if @artist.wikipedia? %>
      <%= link_to "Wikipedia", "https://www.wikipedia.org/wiki/#{@artist.wikipedia}", target: "_blank" %>
    <% end %>
  </div>
  <% if @artist.website? %>
    <div class="website">
      <span class="icon"><%= fa_icon "globe" %></span>
      <%= link_to @artist.website_link, @artist.website, target: "_blank" %>
    </div>
  <% end %>
</div>

<div id="artist-albums">
  <div class="row">
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">Albums</div>
        <div class="list-group">
          <%= render @artist.albums %>
        </div>
      </div>
    </div>
  </div>
</div>
