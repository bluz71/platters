<% title("Platter - Artists") %>
<div class="row">
  <div class="col-md-10">
    <div id="artists">
      <div class="artists-header page-header">
        <h1>Artists <small>(<%= number_with_delimiter(@artists.total_count) %> Artists)</small></h1>
        <%= link_to new_artist_path, class: "action" do %>
          <%= fa_icon "plus" %> Artist
        <% end %>
      </div>

      <div class="list-choice text-center">
        <ul class="pagination pagination-sm">
          <li><%= link_to "All", artists_path %></li>
          <% unless params.key?(:search) %>
            <% ("A".."Z").each do |letter| %>
              <li data-behavior="artist-letter-picker" class=<%= letter_activity(params, letter) %>><%= link_to letter, artists_path(letter: letter) %></li>
            <% end %>
            <li><a class="search-link" data-behavior="artist-search-link">Search</a></li>
          <% end %>
        </ul>
      </div>

      <div class="search-form row" data-behavior="artist-search-form" <%= search_form_visibility(params) %>>
        <%= form_tag artists_path, method: :get, enforce_utf8: false, class: "form-group text-center" do %>
          <div class="col-xs-6 col-xs-offset-3 input-group">
            <%= text_field_tag :search, params[:search], class: "form-control input-sm", placeholder: "Search Artists...", data: {behavior: "artist-search-field"} %>
            <span class="input-group-btn">
              <%= button_tag fa_icon("search"), class: "search-submit btn btn-default btn-sm", name: nil %>
            </span>
          </div>
        <% end %>
      </div>

      <%= render partial: "artist", collection: @artists %>
      <%= paginate @artists %>
    </div>
  </div>
</div>
