<div class="album" data-behavior="artist-album-<%= album.id %>">
  <%= link_to album do %>
    <%= image_tag "cover-sm.jpg", class: "center-block" %>
    <%# <%= image_tag(album.cover.small.url, class: "center-block") if album.cover.small.url? %1> %>
  <% end %>
  <div class="title">
    <h2><%= link_to album.title, album %> <small><%= "(#{album.tracks.count} Tracks, Time #{album.total_duration})" %></small></h2>
    <span class="icon">
      <%= fa_icon "calendar", text: "#{album.release_date.year}" %>
      <%= fa_icon "tag", text: "#{album.genre.name}", class: "spacer-left-xs" %>
      <%= fa_icon "comment-o", text: "0", class: "spacer-left-xs" %>
      <%= link_to album_path(album), remote: true, class: "spacer-left-xs action", method: :delete, data: {confirm: "Are you sure you want to remove #{album.title}"} do %>
        <%= fa_icon "remove", text: "Remove" %>
      <% end %>
      <%= link_to edit_artist_album_path(album.artist, album), class: "spacer-left-xs action" do %>
        <%= fa_icon "edit", text: "Edit" %>
      <% end %>
    </span>
  </div>
  <ul>
    <% album.tracks_summary.each do |track_title| %>
      <li><%= track_title %></li>
    <% end %>
  </ul>
</div>
